<div class="container p-4">
	<div class="row">

		<div class="col-md-4 mx-auto"><!--con el comando mx-auto que pongo ahi estoy centrando el formulario entero-->
		<div class="card">
			<div class="card-body">

				<form action="/links/add" method="POST">

					<div class="form-group">

						<input types="text" class="form-control" name="title" placeholder="Title" autofocus><!-- el autofocus hace que se centre en ese input al carga la pag-->


					</div>
					<div class="form-group">
						<input type="url" name="url" class="form-control" placeholder="URL">
					</div>
					<div class="form-group">
						<textarea name="description" rows="2" class="form-control" placeholder="Descripcion"></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-success btn-block">
							Save
						</button>
					</div>

				</form>

			</div>

		</div>	
		</div>

	</div>
</div>